{
  "compilerOptions": {
    "paths": {
      "@/components/*": ["./components/*"],
      "@/helpers/*": ["./helpers/*"],
      "@/types/*": ["./types/*"],
      "@/services/*": ["./services/*"],
      "shared-types": ["./shared-types.ts"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "extends": "./nextjs.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-sitemap.config.js"
  ],
  "exclude": ["node_modules"]
}
